{

    "manifest_version": 2,
    "name": "Wikilayout",
    "version": "0.0",
    "homepage_url": "https://github.com/krnkktz/wikilayout",

    "description": "Attempts to improve Wikipedia's layout.",

    "icons": {
        "48": "icons/wikilayout-48-on.png"
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],

    "browser_action": {
        "default_title": "Wikilayout",
        "browser_style": true,
        "default_icon": {
            "48": "icons/wikilayout-48-on.png"
        }
    },

    "content_scripts": [
        {
            "matches": ["*://*.wikipedia.org/wiki/*"],
            "run_at": "document_start",
            "css": ["css/style.css"]
        },

        {
            "matches": ["*://*.wikipedia.org/wiki/*"],
            "run_at": "document_start",
            "css": ["css/narrow.css"]
        },

        {
            "matches": ["*://fr.wikipedia.org/wiki/*"],
            "run_at": "document_start",
            "css": ["css/fr.css"]
        },

        {
            "matches": ["*://*.wikipedia.org/wiki/*"],
            "run_at": "document_start",
            "js": ["js/start.js"]
        },

        {
            "matches": ["*://*.wikipedia.org/wiki/*"],
            "run_at": "document_end",
            "js": ["js/ext.js"]
        }
    ],

    "background": {
        "scripts": ["js/block.js", "js/switch.js"]
    }
}
